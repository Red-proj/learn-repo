{
  "name": "maxbot-js",
  "version": "0.2.0",
  "description": "TypeScript-first framework for MAX messenger bots",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "npm run build && node --test tests/*.test.mjs"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "tsup": "^8.3.5",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=18"
  }
}
